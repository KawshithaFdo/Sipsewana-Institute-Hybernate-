<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="StudentContext" prefHeight="448.0" prefWidth="651.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StudentFormController">
    <children>
        <Label layoutX="202.0" layoutY="5.0" text="Student Form">
            <font>
                <Font name="System Bold" size="31.0" />
            </font>
        </Label>
        <Separator layoutX="14.0" layoutY="53.0" prefHeight="6.0" prefWidth="620.0" />
        <JFXTextField fx:id="txtstudentid" focusColor="BLACK" labelFloat="true" layoutX="53.0" layoutY="71.0" onAction="#loadstudentupdatedata" prefHeight="26.0" prefWidth="214.0" promptText="Student ID" unFocusColor="WHITE">
            <font>
                <Font name="Ubuntu Bold" size="16.0" />
            </font>
        </JFXTextField>
        <JFXTextField fx:id="txtName" focusColor="BLACK" labelFloat="true" layoutX="353.0" layoutY="71.0" prefHeight="26.0" prefWidth="214.0" promptText="Name" unFocusColor="WHITE">
            <font>
                <Font name="Ubuntu Bold" size="16.0" />
            </font>
        </JFXTextField>
        <JFXTextField fx:id="txtAddress" focusColor="BLACK" labelFloat="true" layoutX="53.0" layoutY="140.0" prefHeight="26.0" prefWidth="214.0" promptText="Address" unFocusColor="WHITE">
            <font>
                <Font name="Ubuntu Bold" size="16.0" />
            </font>
        </JFXTextField>
        <JFXTextField fx:id="txtcontact" focusColor="BLACK" labelFloat="true" layoutX="353.0" layoutY="140.0" prefHeight="26.0" prefWidth="214.0" promptText="contact" unFocusColor="WHITE">
            <font>
                <Font name="Ubuntu Bold" size="16.0" />
            </font>
        </JFXTextField>
        <JFXButton fx:id="btnsave" buttonType="RAISED" layoutX="301.0" layoutY="187.0" onAction="#btnSaveOnAction" prefHeight="31.0" prefWidth="214.0" style="-fx-background-color: #82ccdd; -fx-background-radius: 50;" text="REGISTER" textFill="WHITE">
            <font>
                <Font name="Ubuntu Bold" size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXButton>
        <TableView fx:id="tblStudent" layoutX="17.0" layoutY="230.0" prefHeight="161.0" prefWidth="620.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="85.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="176.0" text="Name" />
                <TableColumn fx:id="colAddress" prefWidth="215.0" text="Address" />
                <TableColumn fx:id="colcontact" prefWidth="142.0" text="Contact" />
            </columns>
        </TableView>
        <JFXButton fx:id="btnupdate" buttonType="RAISED" layoutX="525.0" layoutY="187.0" onAction="#btnUpdateOnAction" prefHeight="31.0" prefWidth="90.0" style="-fx-background-color: #2ecc71; -fx-background-radius: 50;" text="UPDATE" textFill="WHITE">
            <font>
                <Font name="Ubuntu Bold" size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXButton>
      <JFXButton fx:id="btndelete" buttonType="RAISED" layoutX="532.0" layoutY="401.0" onAction="#btnDeleteOnAction" prefHeight="31.0" prefWidth="90.0" style="-fx-background-color: #eb2f06; -fx-background-radius: 50;" text="DELETE" textFill="WHITE">
         <font>
            <Font name="Ubuntu Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton buttonType="RAISED" layoutX="8.0" layoutY="12.0" onAction="#btnBackOnAction" prefHeight="31.0" prefWidth="90.0" style="-fx-background-color: #1e3799;" text="BACK" textFill="WHITE">
         <font>
            <Font name="Ubuntu Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
    </children>
</AnchorPane>
